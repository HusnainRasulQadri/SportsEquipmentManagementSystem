            <image>
                <Image url="@close.png" />
            </image>
        </ImageView>
        <ImageView fx:id="minimizeButton" fitHeight="47.0" fitWidth="26.0" layoutX="420.0" layoutY="8.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@hide.png" />
            </image>
        </ImageView>
    </children>
</AnchorPane>
