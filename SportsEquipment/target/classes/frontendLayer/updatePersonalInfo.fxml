<AnchorPane prefHeight="552.0" prefWidth="509.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontendLayer.updatePersonalInformation">
    <children>
        <Label alignment="CENTER" layoutX="110.0" layoutY="4.0" prefHeight="35.0" prefWidth="285.0" text="Update Personal Information" textAlignment="CENTER" textFill="#fafafa">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Pane layoutX="11.0" layoutY="41.0" prefHeight="491.0" prefWidth="489.0" styleClass="mainPane" stylesheets="@application.css">
            <children>
                <Button layoutX="129.0" layoutY="207.0" mnemonicParsing="false" onMouseClicked="#createAccount" prefHeight="39.0" prefWidth="231.0" styleClass="highlight" text="Update">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
                <TextField fx:id="fx_name" layoutX="146.0" layoutY="70.0" prefHeight="35.0" prefWidth="265.0" styleClass="highlight" />
                <Label layoutX="46.0" layoutY="70.0" text="Name">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <Label layoutX="46.0" layoutY="115.0" text="DOB">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <DatePicker fx:id="fx_DOB" blendMode="DARKEN" layoutX="154.0" layoutY="120.0" onAction="#dateClicked" />
                <Label layoutX="46.0" layoutY="159.0">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
            </children>
        </Pane>
